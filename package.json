{
  "name": "link",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:prod": "tsx scripts/build-production.ts",
    "package:prod": "tsx scripts/create-deployment-package.ts",
    "start": "npx prisma generate && npx prisma db push && next start",
    "start:prod": "NODE_ENV=production next start",
    "start:deploy": "npx prisma generate && npx prisma db push && next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:init": "tsx scripts/init-db.ts",
    "db:reset": "prisma migrate reset --force",
    "db:optimize": "tsx scripts/optimize-db.ts",
    "db:setup": "npx prisma generate && npx prisma db push",
    "setup": "prisma generate && prisma db push && bun run db:init",
    "setup:prod": "prisma generate && prisma migrate deploy && bun run db:init",
    "db:fix": "tsx scripts/fix-database-deployment.ts",
    "perf:monitor": "tsx scripts/performance-monitor.ts",
    "cache:clear": "tsx scripts/clear-cache.ts",
    "health:check": "tsx scripts/health-check.ts"
  },
  "dependencies": {
    "@marsidev/react-turnstile": "^1.4.0",
