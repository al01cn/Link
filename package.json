    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "tailwindcss": "^4",

    "typescript": "^5",
    "vitest": "^4.0.16"
  }
